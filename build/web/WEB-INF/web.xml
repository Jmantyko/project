<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>etusivu.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <!-- Missing login -->
        <error-code>401</error-code>
        <location>/etusivu.jsp</location>
    </error-page>
    <error-page>
        <!-- Forbidden directory listing -->
        <error-code>403</error-code>
        <location>/etusivu.jsp</location>
    </error-page>
    <error-page>
        <!-- Missing resource -->
        <error-code>404</error-code>
        <location>/etusivu.jsp</location>
    </error-page>
    <error-page>
        <!-- Uncaught exception -->
        <error-code>500</error-code>
        <location>/etusivu.jsp</location>
    </error-page>
    <error-page>
        <!-- Unsupported servlet method -->
        <error-code>503</error-code>
        <location>/etusivu.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Arjenhallinta.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Arjenhallinta.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateUser</servlet-name>
        <servlet-class>Arjenhallinta.CreateUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUserDetails</servlet-name>
        <servlet-class>Arjenhallinta.UpdateUserDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUserPassword</servlet-name>
        <servlet-class>Arjenhallinta.UpdateUserPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>Arjenhallinta.DeleteUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OpenNewTask</servlet-name>
        <servlet-class>Arjenhallinta.OpenNewTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CloseTask</servlet-name>
        <servlet-class>Arjenhallinta.CloseTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateUser</servlet-name>
        <url-pattern>/CreateUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUserDetails</servlet-name>
        <url-pattern>/UpdateUserDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUserPassword</servlet-name>
        <url-pattern>/UpdateUserPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/DeleteUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OpenNewTask</servlet-name>
        <url-pattern>/OpenNewTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CloseTask</servlet-name>
        <url-pattern>/CloseTask</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
